set deviceconfig system hostname vsys-rulebase
set network interface ethernet ethernet1/1 layer3 ip 1.1.1.1/24
set network interface ethernet ethernet1/2 layer3 ip 1.1.2.1/24
set network interface ethernet ethernet1/3 layer3 ip 1.1.3.1/24
set network interface ethernet ethernet1/4 layer3 ip 1.1.4.1/24

# set vsys vsys11 import network interface [ ethernet1/1 ethernet1/2 ]
# set vsys vsys12 import network interface [ ethernet1/3 ethernet1/4 ]

set vsys vsys11 zone z1 network layer3 [ ethernet1/1 ethernet1/2 ]
set vsys vsys12 zone z2a network layer3 [ ethernet1/3 ]
set vsys vsys12 zone z2b network layer3 ethernet1/4

set vsys vsys11 rulebase security rules RULE1 from [ z1 ]
set vsys vsys11 rulebase security rules RULE1 to any
set vsys vsys11 rulebase security rules RULE1 source 1.1.2.255
set vsys vsys11 rulebase security rules RULE1 destination any
set vsys vsys11 rulebase security rules RULE1 service any
set vsys vsys11 rulebase security rules RULE1 application any
set vsys vsys11 rulebase security rules RULE1 action allow

set vsys vsys12 rulebase security rules RULE1 from [ z2 ]
set vsys vsys12 rulebase security rules RULE1 to z3
set vsys vsys12 rulebase security rules RULE1 source any
set vsys vsys12 rulebase security rules RULE1 destination any
set vsys vsys12 rulebase security rules RULE1 service any
set vsys vsys12 rulebase security rules RULE1 application any
set vsys vsys12 rulebase security rules RULE1 action allow
